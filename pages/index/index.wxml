<view class="m-head">
	<view class="homeHead">
		<open-data type="userAvatarUrl"></open-data>
	</view>
	<view class="homeName">
		<open-data type="userNickName"></open-data>
	</view>
	<view class="qizhen" bindtap="loadImg">
		<image src="../img/qianzheng.png"></image>
		<text>我的签证</text>
	</view>
</view>
<view class="m-main">
	<view class="m-main-content">
		<view class="plandata">
			<text>今天</text>
			<text>12-12</text>
			<text>周五</text>
		</view>
		<view>
			<view class="rightPlan m-margin-bottom" wx:for="{{imgList}}">
				<view>
					<image src="{{item.src}}"></image>
					<view class="xuxian"></view>
				</view>
				<view>
					<view wx:if="{{item.state == 1}}" class="plan-item ">
						<view class="m-paln-top">
							<view class="m-paln-topTitle">
								<text>BI622</text>
								<text>航班</text>
							</view>
							<image style="width:32rpx;height:32rpx" src="../img/jiantou.png"></image>
						</view>
						<view class="m-plan-midden">
							<view>
								<text>北京</text>
								<text>14:01</text>
							</view>
							<image style="width:44rpx;height:44rpx;margin-top:12rpx" src="../img/itemplan.png"></image>
							<view>
								<text>土耳其</text>
								<text>17:45</text>
							</view>
						</view>
					</view>
					<view wx:elif="{{item.state == 2}}" class="wait-item ">转机预计等待35分钟</view>


					<view wx:elif="{{item.state == 3}}" class="hotel-item ">
						<view class="m-paln-top">
							<view class="m-hotel-topTitle">
								<text>某某某某某酒店</text>
								<text>酒店地址地址地址地址</text>
								<text>入住：上午12:00</text>
							</view>
							<image style="width:32rpx;height:32rpx" src="../img/jiantou.png"></image>
						</view>
					</view>


					<view wx:elif="{{item.state == 4}}" class="bus-item ">
						<view class="m-paln-top">
							<view class="m-huiyi-topTitle">
								<text>车牌HN6666</text>
								<text></text>
								<text>上车：上午12:00</text>
							</view>
						</view>
						<view class="contact-driver">
							<image src="../img/greenTel.png"></image>
							<text>联系司机</text>
						</view>

					</view>


					<view wx:elif="{{item.state == 5}}" class="huiyi-item ">
						<view class="m-paln-top">
							<view class="m-huiyi-topTitle">
								<text>某某某某会议</text>
								<text>会议地点地点</text>
								<text>会议结束：上午12:00</text>
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>