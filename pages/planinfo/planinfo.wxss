/* pages/planinfo/planinfo.wxss */
.m-title {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-flow: column;
  text-align: center;
}

.planTitle {
  font-size: 64rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  line-height: 85rpx;
  color: rgba(43, 43, 54, 1);
  opacity: 1;
}

.planName {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(43, 43, 54, 1);
  opacity: 0.99;
}

.m-date {
  width: 100%;
  height: 80rpx;
  border-top: 1px solid rgba(226, 233, 240, 1);
  border-bottom: 1px solid rgba(226, 233, 240, 1);
  display: flex;
  align-items: center;
  padding-left: 84rpx;
  margin-top: 62rpx;
}

.m-date1 {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(43, 43, 54, 1);
  opacity: 0.99;
}

.m-date2 {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  opacity: 0.99;
  margin-left: 32rpx;
}

.m-info {
  width: 100%;
  margin-top: 126rpx;
  padding-left: 96rpx;
  position: relative;
}

.xuxian {
  width: 0px;
  height: 228rpx;
  border: 1px dashed rgba(170, 199, 221, 1);
  margin-left: 16rpx;
  opacity: 1;
}

.d4 {
  width: 0;
  height: 0;
  border-width: 8rpx;
  border-style: solid;
  border-color: rgba(170, 199, 221, 1) transparent transparent transparent;
  position: absolute;
  margin-left: 10rpx;
  top: 100rpx;

}

.d5 {
  top: 190rpx;
}

.yuan {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #5A7DC9;
  margin-left: 10rpx;
}

.m-fly {
  margin-left: 70rpx;
  position: absolute;
  top: -22rpx
}

.m-flyend {
  top: 235rpx;
}

.m-time {
  width: 134rpx;
  font-size: 52rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 88rpx;
  color: rgba(90, 125, 201, 1);
  opacity: 1;
}

.m-didian {
  width: 64rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 54rpx;
  color: rgba(90, 125, 201, 1);
  opacity: 1;
  position: absolute;
  top: 74rpx;
  left: 0;
}

.m-jichang {
  width: 270rpx;
  font-size: 44rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 64rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  position: absolute;
  top: 12rpx;
  left: 222rpx;
}

.m-riqi {
  width: 170rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(122, 123, 142, 1);
  opacity: 1;
  position: relative;
  bottom: 14rpx;
}

.m-riqibianhao {
  width: 90rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(122, 123, 142, 1);
  opacity: 1;
  position: relative;
  bottom: 14rpx;
  left: 32rpx;
}

.info-card {
  width: 90%;
  height: 220rpx;
  background: rgba(128, 156, 199, 0.15);
  border-radius: 32rpx;
  margin: 0 auto;
  margin-top: 158rpx;
  padding: 58rpx 48rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.info-card view{
  display: flex;
  flex-flow: column;
}
.piaohao text:nth-child(1),
.flyTime text:nth-child(1) {
  width:144rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 54rpx;
  color: rgba(122, 123, 142, 1);
  opacity: 1;
}

.piaohao text:nth-child(2),
.flyTime text:nth-child(2) {
  width: 144rpx;
  font-size: 36rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 62rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}